<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookstoreProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <!--adds cart to shared layout view-->
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">BOOKSTORE</div>
                <div class="col-6 text-right">
                    <vc:cart-summary /> <!-- uses CartSummaryViewComponent-->
                </div>
            </div>
        </div>
    </div>

    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-5">Online Bookstore</span>
    </div>
    <div class="row m-1 p-1">
        <div id="blah" class="col-3">
            <h1>Welcome to the Online Bookstore</h1>
            <vc:navigation-menu /> <!-- uses NavigationMenuViewComponent -->
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>

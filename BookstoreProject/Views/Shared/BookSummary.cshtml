@model Book

<div class="card card-outline-primary m-1 p-1 card bg-light mb-3">
    <br />
    <h4>
        @Model.Title
    </h4>
    <div class="text-muted">
        <p>Author: @Model.AuthorFirstName @Model.AuthorMiddleName @Model.AuthorLastName</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Page Count: @Model.NumPages</p>
        <p>Price: $@Model.Price</p>
        <p>Category: @Model.Category</p>
        <span class="badge badge-pill badge-info" style="float:right">
            <p>@Model.Classification</p>
        </span>
    </div>
    <br />

    <form id="@Model.BookId" asp-page="/Shop" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add to Cart
            </button>
        </span>
    </form>
</div>